<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-3 mt-3">

 
<body>
    <h3><b><%=listing.title%> </b></h3>

</div>
    
    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= listing.image && listing.image.startsWith('http') ? listing.image : 'https://via.placeholder.com/400x300?text=No+Image' %>" class="card-img-top show-img"  alt="listing_image">
  <div class="card-body">
    <p class="card-text">
       <br>
        <%=listing.description%> <br>
        &#8377;<%=listing.price.toLocaleString("en-IN")%> <br>
        <%=listing.location%> <br>
        <%=listing.country%> <br>
    </p>
  </div>

    </div>

</div>
   
<div class="btns">
    <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    <BR>

    <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE" >
        <BUTTON class="btn btn-dark offset-5">Delete </BUTTON>
    </form>
</body>

</div>

<br>
<hr>
<div class="col-8 offset-3 mt-3">
    <h4>Leave a Review</h4>

    <form action="/listings/<%=listing.id%>/rewiews" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
        <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="20" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Please add some comments for Review</div>
        </div>
        
        <button class="btn btn-outline-dark">Submit</button>
    </form>
    <br>
    </div>


   <p class="col-8 offset-3"> <b>All Reviews</b></p>
    <div class="row">
    <% for(review of listing.reviews) { %>
        <div class="card col-6 mb-3 offset-3">
            <div class="card-body">
                <h5 class="card-title">John</h5>
                <p class="card-text"> <%= review.comment %></p>
                <p class="card-text"> <%= review.rating %> Stars</p>
                <form action="/listings/<%= listing._id%>/reviews/<%= review._id%>?_method=DELETE" method="post" class="mb-3">
                    <button class="btn btn-sm btn-dark">Delete</button>
                </form>
            </div>
        </div>
    <% } %>
    </div>

<br><br>

    



